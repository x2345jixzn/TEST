    setInterval(function () {
        // Find Tha balance
        let blc = document.getElementsByClassName("usermenu__info-balance")[0]
        .innerHTML;
        blc = blc.replaceAll(",", "");
        blc = blc.replaceAll("$", "");
        blc = blc.replaceAll(".", "");
        blc = blc.substring(0, blc.length - 2);
        blc = parseInt(blc);


